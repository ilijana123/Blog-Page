@using Microsoft.AspNetCore.Identity
@using BlogPage2.Areas.Identity.Data

@inject UserManager<BlogPage2User> UserManager
@model BlogPage2.Models.UserP

@{
    ViewData["Title"] = "Details";
}

<style>
    .container {
        margin-top: 20px;
        max-width: 500px;
    }

    .form-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1, h4 {
        color: #343a40;
    }

    dl.row dt {
        font-weight: bold;
        color: #495057;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            opacity: 0.9;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            opacity: 0.9;
        }

    .text-muted {
        color: #6c757d;
    }

    .text-danger {
        font-size: 80%;
    }
</style>

<div class="container">
    <div class="form-container">
        <h1>Details</h1>
        <h4>UserP</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.PostId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PostId)
            </dd>
            <dt class="col-sm-3">
                Saved By:
            </dt>
            <dd class="col-sm-9">
                @{
                    var user = await UserManager.FindByIdAsync(Model.AppUser);
                    if (user != null)
                    {
                        @user.UserName
                    }
                    else
                    {
                        <span class="text-muted">User not found</span>
                    }
                }
            </dd>
        </dl>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
