@using Microsoft.AspNetCore.Identity
@using BlogPage2.Areas.Identity.Data

@inject UserManager<BlogPage2User> UserManager
@model BlogPage2.Models.UserP

@{
    ViewData["Title"] = "Delete";
}
<style>
    .container {
        margin-top: 20px;
        max-width: 600px; 
    }

    .form-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    h1, h3 {
        color: #343a40;
    }

    .btn-danger {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-secondary {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
        color: #ffffff;
    }

    dl.row dt {
        font-weight: bold;
    }

    .text-muted {
        color: #6c757d;
    }
</style>
<h1>Delete</h1>
<div class="container">
    <div class="form-container">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Saved Post</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PostId)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PostId)
            </dd>
                <dt class="col-sm-2">
                    Saved By:
                </dt>
                <dd class="col-sm-10">
                    @{
                        var user = await UserManager.FindByIdAsync(Model.AppUser);
                        if (user != null)
                        {
                            @user.UserName
                        }
                        else
                        {
                            <span>User not found</span>
                        }
                    }
                </dd>
        </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
    </div>
    </div>
</div>