@using Microsoft.AspNetCore.Identity
@using BlogPage2.Areas.Identity.Data
@inject UserManager<BlogPage2User> UserManager
@model IEnumerable<BlogPage2.Models.UserP>

@{
    ViewData["Title"] = "Saved Posts";
    var currentUser = UserManager.GetUserAsync(User).Result;
    var userPs = Model.Where(ub => ub.AppUser == currentUser.Id).ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 50px;
        }

        .container {
            max-width: 1000px;
            margin: auto;
        }

        .table-responsive {
            margin-top: 20px;
        }

        .table {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

            .table thead th {
                background-color: #343a40;
                color: #fff;
                border-color: #343a40;
            }

            .table tbody td {
                vertical-align: middle;
            }

            .table img {
                width: 150px; 
                height: 150px; 
                object-fit: cover;
            }
        .btn {
            padding: 5px 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #117a8b;
                border-color: #117a8b;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #bd2130;
                border-color: #bd2130;
            }

        .post-title {
            color: black;
            text-decoration: none;
            transition: color 0.3s;
        }

            .post-title:hover {
                color: #0056b3;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Post Title</th>
                        <th>Content</th>
                        <th>User</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in userPs)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Post?.Image))
                                {
                                    var imageUrl = Url.Content($"~/images/{item.Post.Image}");
                                    <img src="@imageUrl" alt="Post Image" style="max-width: 150px; max-height: 150px;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>

                            <td>
                                @if (item.Post != null)
                                {
                                    <a href="@Url.Action("Details", "Posts", new { id = item.PostId })" class="post-title">
                                        @item.Post.Title
                                    </a>
                                }
                                else
                                {
                                    <span>No Title</span>
                                }
                            </td>

                            <td>
                                @if (item.Post != null)
                                {
                                    @item.Post.PostContent
                                }
                                else
                                {
                                    <span>No Content</span>
                                }
                            </td>
                            <td>
                                @(await UserManager.FindByIdAsync(item.AppUser))
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-controller="Posts" asp-route-id="@item.PostId" class="btn btn-dark">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
